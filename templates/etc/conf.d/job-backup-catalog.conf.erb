### Job Definition ###
Job {
  Name = "Job-Backup-Catalog"
  Client = Client-<%= @fqdn %>
  FileSet = "Catalog"
  JobDefs = "DefaultJob"
  Level = Full
  Schedule = "WeeklyCycleAfterBackup"
  RunBeforeJob = "/usr/libexec/bacula/make_catalog_backup.pl BackupCatalog"
  RunAfterJob  = "/usr/libexec/bacula/delete_catalog_backup"
  Write Bootstrap = "/var/spool/bacula/%n.bsr"
  Priority = 11
  Full Backup Pool = Catalog-Pool
}
